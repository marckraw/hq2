# Example environment configuration for HQ
# Copy this file to .env and fill in your values

# Core Configuration
NODE_ENV=development              # environment (development/production/test)
PORT=3000                         # server port
LOG_LEVEL=info                    # log level

# Database
DATABASE_URL=postgres://user:pass@localhost:5432/db # PostgreSQL connection string

# AI/LLM Services
ANTHROPIC_API_KEY=your-anthropic-key    # Anthropic Claude AI
OPENAI_API_KEY=your-openai-key          # OpenAI GPT models
OPENROUTER_API_KEY=your-openrouter-key  # OpenRouter LLM access
GEMINI_API_KEY=your-gemini-key          # Google Gemini AI
ELEVENLABS_API_KEY=your-elevenlabs-key  # ElevenLabs text-to-speech

# External Services
FIGMA_API_KEY=your-figma-key         # Figma integration
LEONARDOAI_API_KEY=your-leonardo-key # LeonardoAI image generation
X_API_KEY=your-x-key                 # X (Twitter) API

# AWS Configuration
AWS_ACCESS_KEY_ID=your-access-id     # AWS access key
AWS_SECRET_ACCESS_KEY=your-secret-key # AWS secret key
AWS_REGION=us-east-1                 # AWS region
S3_BUCKET_NAME=my-hq-bucket          # S3 bucket name

# Qdrant Vector Database
QDRANT__SERVICE__URL=https://your-qdrant-url.com # Qdrant service URL
QDRANT__SERVICE__PORT=443                         # Qdrant port (default: 443)
QDRANT__SERVICE__API_KEY=                         # Qdrant API key (optional)

# Optional Integrations
TODOIST_API_TOKEN=                   # Todoist integration
FIRECRAWL_API_KEY=                   # Firecrawl web scraping
GITHUB_TOKEN=                        # GitHub API access
HQ_SLACK_SECRET=                     # Slack integration secret
SLACK_BOT_URL=                       # Slack bot webhook URL
STORYBLOK_OAUTH_TOKEN=               # Storyblok OAuth token
STORYBLOK_ACCESS_TOKEN=              # Storyblok access token

# Langfuse LLM Observability (Optional)
LANGFUSE_SECRET_KEY=                 # Langfuse secret key
LANGFUSE_PUBLIC_KEY=                 # Langfuse public key
LANGFUSE_BASE_URL=https://cloud.langfuse.com # Langfuse base URL
LANGFUSE_ENABLED=true                # Enable/disable Langfuse
LANGFUSE_FLUSH_AT=1                  # Batch size for Langfuse
LANGFUSE_FLUSH_INTERVAL=1000         # Flush interval in milliseconds
